{
  "name": "Issue link History",
  "version": "0.1",
  "description": "You can copy link of GitHub issued that you saw recently.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "history"
  ],
  "browser_action": {
    "default_popup": "./index.html",
    "default_title": "Issue link History"
  },
  "option_page": "./option.html",
  "icons":{
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'"
}
